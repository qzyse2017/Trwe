<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="#8000"
    android:orientation="vertical"
    android:id="@+id/now">

    <TextView
        android:id="@+id/now_weather"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="实时天气"
        />
    <TextView
        android:id="@+id/degree_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textColor="#fff"
        android:textSize="60sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/weather_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="#fff"
            android:textSize="20sp"/>
       <!--
        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginRight="20dp"/>-->
    </LinearLayout>
    <android.trwea.com.trwea.Component.WindShow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/now_wind"/>
    <LinearLayout
        android:id="@+id/fl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fl_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="体感温度 "
            />
        <TextView
            android:id="@+id/fl_arg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"

            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/hum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/hum_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="相对湿度（%）"
            />
        <TextView
            android:id="@+id/hum_arg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"

            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/pcpn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/pcpn_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="降水量（mm）"
            />
        <TextView
            android:id="@+id/pcpn_arg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"

            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/pres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/pres_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="气压 "
            android:textColor="#fff"
            />
        <TextView
            android:id="@+id/pres_arg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/vis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/vis_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="能见度（km）"
            />
        <TextView
            android:id="@+id/vis_arg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            />

    </LinearLayout>
</LinearLayout>
