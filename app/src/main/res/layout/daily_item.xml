<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="#8000"
    android:id="@+id/daily_forecast_item">

        <LinearLayout
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日期 "
                android:textSize="15sp"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/date_arg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#fff"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/weather_descrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="白天/夜间 "
                android:textSize="15sp"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/weather_arg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#fff"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/tmp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tmp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="气温最高/最低 "
                android:textColor="#fff"
                />
            <TextView
                android:id="@+id/max_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/split_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="/"/>
            <TextView
                android:id="@+id/min_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"/>

        </LinearLayout>

        <include layout="@layout/astro" />

    <android.trwea.com.trwea.Component.WindShow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/daily_wind"/>

        <LinearLayout
            android:id="@+id/hum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/hum_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相对湿度（%）"
                android:textColor="#fff"
                />
            <TextView
                android:id="@+id/hum_arg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/pcpn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pcpn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="降水量（mm）"
                android:textColor="#fff"
                />
            <TextView
                android:id="@+id/pcpn_arg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pop_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="降水概率（%）"
                android:textColor="#fff"
                />
            <TextView
                android:id="@+id/pop_arg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/pres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pres_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="气压"
                android:textColor="#fff"
                />
            <TextView
                android:id="@+id/pres_arg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/vis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/vis_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="能见度（km）"
                android:textColor="#fff"
                />
            <TextView
                android:id="@+id/vis_arg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
          />

    </LinearLayout>
